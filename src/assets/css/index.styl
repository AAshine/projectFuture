//课程 banner
#CourserDetails{
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 540px;
  }
  .slider-imgcontainer {
    margin-top:40px;
    position: absolute;
    left: 0;
    width: 400%;
    transition: left .5s linear;
  }
#CourserDetails img {
    width: 25%;
    height: 520px;
    max-height: 520px;
    cursor: pointer;
  }
  .slider-buttons {
    position: absolute;
    left: 60%;
    bottom: 50px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .slider-imgindex {
    cursor: pointer;
    width: 14px;
    height: 14px;
    margin: 0 10px;
    background-color: rgba(255, 248, 248, 0.98);
    border-radius: 7px;
    transition: width .3s linear;
  }
  .slider-imgindex-active {
    width: 60px;
  }
  .slider-move {
    position: absolute;
    top: 40%;
    height: 20%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .slider-move span {
    cursor: pointer;
    text-align: center;
    color: #fff;
    line-height: 60px;
    width: 50px;
    background-color: rgba(8,1,1,0.62);
  }
  .slider-move span:hover{
    background-color: rgba(8,1,1,0.9);
  }
